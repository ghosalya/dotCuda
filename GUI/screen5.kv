<MenuScreen>:
    BoxLayout:
        orientation: "vertical"
        Label: 
            text: 'What do you want to do?'
            font_size: 40
            color: 100,50,20,15
        Button:
            text: 'Select Image from Folder'
            font_size: 20
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'selectimg'

<SelectImageScreen>:
    id: selectimg
    file_chooser: file_chooser
    GridLayout:
        rows: 3
        FileChooserListView:
            id: file_chooser
            on_selection: selectimg.selected(file_chooser.selection)
        Image:
            id: image1
            source: ""
        Button:
            text: 'Compute'
            font_size: 20
            on_press: root.manager.current = 'enterqns'
        
<EnterQuestionScreen>:
    id: enterquestion
    BoxLayout:
        orientation: 'vertical'
        Image:
            id: image2
            source: ""
            size_hint: 1, 0.3
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.3
            TextInput:
                id: input
                text: 'Input Question Here'
                font_size: 20
                size_hint: 0.8, 1
            Button: 
                id: enterbutton
                text: 'Enter Question'
                font_size: 20
                size_hint: 0.2, 1
                on_press: 
                    enterquestion.modelpass()
                    
        Label:
            id: ans
            text: 'Predicted Answer is...'
            font_size: 25
            size_hint: 1, 0.3
            color: 100,50,20,15
            
        Button:
            text: 'Back to Menu'
            font_size: 20
            size_hint: 1, 0.1
            on_press: root.manager.current = 'menu'